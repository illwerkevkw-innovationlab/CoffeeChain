<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeChain.App.Views.BalancePage"
             Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10" IsVisible="{Binding IsLoaded}">
                <Label FontSize="14" FontAttributes="Bold" Text="Wallet" />
                <Label FontSize="14" TextColor="{StaticResource LightTextColor}" Text="{Binding Wallet}" />
                <Label FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" Text="Coffee Tokens" />
                <Label FontSize="14" TextColor="{StaticResource LightTextColor}" Text="{Binding CoffeeTokens}" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>